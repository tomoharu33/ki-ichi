<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        本の登録
      </h1>
    </div>
  </div>
</section>

<%= render 'errors', book: @book %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @book do |f| %>
          <div class="field">
            <%= f.label :title, "題名", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :body, "説明", class: "label" %>
            <%= f.text_area :body, class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :book_image, "写真", class: "label" %>
            <%= f.file_field :book_image, class: "input" %>
          </div>

          <%= f.submit '投稿', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>