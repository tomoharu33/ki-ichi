<section class="section main-image">
  <article class="media">
    <div class="media-content">
      <div class="content has-text-centered">
        <p>
          <strong class="is-size-1 custom-black" style="font-family: Noto Sans JP;">木一</strong>
        </p>
        <p>
          <strong class="is-size-4 custom-gray">本棚から始まる豊かな世界</strong>
        </p>
      </div>

      <% if user_signed_in? %>
      <!-- ログイン時 -->

      <div class="container">
        <div class="columns is-multiline">
          <% @books.each do |book| %>
            <div class="column is-4">
              <div class="card">
                <div class="card-image">
                  <figure class="image is-4by3">
                    <%= link_to book_path(book) do %>
                      <% if book.book_image.attached? %>
                        <%= image_tag book.book_image %>
                      <% end %>
                    <% end %>
                  </figure>
                </div>
                <div class="card-content">
                  <div class="media">
                    <div class="media-left">
                      <figure class="image is-48x48">
                        <% if book.book_image.attached? %>
                          <%= image_tag book.book_image %>
                        <% end %>
                      </figure>
                    </div>
                    <div class="media-content">
                      <div class="title"><%= link_to book.title, book_path(book) %></div>
                    </div>
                  </div>
                  <div class="content">
                    <time><%= book.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <% else %>
      <!-- 非ログイン時 -->

      <div class="columns is-centered">
        <div class="column is-5">
          <br>
          <%= link_to "ログイン", new_user_session_path, class: "button is-warning is-fullwidth" %>
          <br>
          <%= link_to "新規登録", new_user_registration_path, class: "button is-warning is-fullwidth" %>
        </div>
      </div>
      
      <% end %>

    </div>
  </article>
  <br>
</section>


